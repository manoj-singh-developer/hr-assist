<br><br>
<%= form_for :app_settings do |f| %>

    <div class="form-group">
    <%= f.label :host %>
    <%= f.text_field :host , class: "form-control" , value: (getOption "ldap_host") %><br>
    </div>

    <div class="form-group">
    <%= f.label :port %>
    <%= f.text_field :port , class: "form-control" , value: (getOption "ldap_port") %><br>
    </div>

    <div class="form-group">
    <%= f.label :account %>
    <%= f.text_field :account , class: "form-control" , value: (getOption "ldap_account") %><br>
    </div>

    <div class="form-group">
      <%= f.label :ldap_password %>
      <%= f.password_field  :ldap_password , class: "form-control" , value: (ActiveSupport::MessageEncryptor.new(Rails.application.secrets.secret_key_base).decrypt_and_verify(getOption "ldap_password") unless (getOption "ldap_password") == "") %><br>
    </div>

    <div class="form-group">
    <%= f.label :baseDN %>
    <%= f.text_field :baseDN , class: "form-control" , value: (getOption "ldap_basedn") %><br>
    </div>

    <div class="form-group">
    <%= f.label :ldap_filter %>
    <%= f.text_area  :ldap_filter , class: "form-control" , value: (getOption "ldap_filter") %><br>
    </div>

    <%= f.submit "Save" , class: "btn btn-default" %>
<% end %>