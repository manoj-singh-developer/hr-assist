<br><br>
<%= form_for :app_settings do |f| %>

    <div class="form-group">
    <%= f.label :host %>
    <%= f.text_field :host, class: "form-control", value: (get_option "ldap_host", AppSetting) %><br>
    </div>

    <div class="form-group">
    <%= f.label :port %>
    <%= f.text_field :port, class: "form-control", value: (get_option "ldap_port", AppSetting) %><br>
    </div>

    <div class="form-group">
    <%= f.label :account %>
    <%= f.text_field :account, class: "form-control", value: (get_option "ldap_account", AppSetting) %><br>
    </div>

    <div class="form-group">
      <%= f.label :ldap_password %>
      <%= f.password_field  :ldap_password, class: "form-control" %><br>
    </div>

    <div class="form-group">
    <%= f.label :baseDN %>
    <%= f.text_field :baseDN, class: "form-control", value: (get_option "ldap_basedn", AppSetting) %><br>
    </div>

    <div class="form-group">
    <%= f.label :ldap_filter %>
    <%= f.text_area  :ldap_filter, class: "form-control", value: (get_option "ldap_filter", AppSetting) %><br>
    </div>

    <%= f.submit "Save", class: "btn btn-default" %>
<% end %>